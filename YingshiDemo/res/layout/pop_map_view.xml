<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="horizontal" android:background="@drawable/popup"
	android:paddingLeft="5dip" android:paddingTop="5dip"
	android:paddingRight="5dip" android:paddingBottom="10dip">
	<ImageView
	    android:id="@+id/sroute" 
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:src="@drawable/menu_route"
		/>
	<ImageView 
	    android:id="@+id/in1" 
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		 android:src="@drawable/divider2"
		/>	
	<TextView
	    android:id="@+id/myloca" 
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		 android:text="我的位置"
		 android:textColor="#000000"
		android:gravity="center_vertical|center_horizontal"
		android:layout_marginLeft="5dip"
		android:layout_marginRight="5dip"
		android:paddingTop="8dip"
		/>
		<ImageView 
		     android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		    android:src="@drawable/divider2"
		/>
	<ImageView 
	    android:id="@+id/in2" 
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:src="@drawable/toolbar_nearsearch_normal"
		/>
</LinearLayout>
